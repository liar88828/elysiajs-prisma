model StatusDB {
  id          String          @id @default("PENDING")
  Transaction TransactionDB[]
}

model PostDB {
  id     Int     @id @default(autoincrement())
  title  String
  msg    String
  UserDB UserDB? @relation(fields: [userId], references: [id])
  userId Int?
}
